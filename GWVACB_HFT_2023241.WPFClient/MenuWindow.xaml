<Window x:Class="GWVACB_HFT_2023241.WPFClient.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GWVACB_HFT_2023241.WPFClient"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MenuWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Button Margin="5" Padding="10" Content="Authors" Command="{Binding OpenAuthorsCommand}"/>
            <Button Margin="5" Padding="10" Content="Quotes" Command="{Binding OpenQuotesCommand}"/>
            <Button Margin="5" Padding="10" Content="Comments" Command="{Binding OpenCommentsCommand}"/>
        </StackPanel>
    </Grid>
</Window>
